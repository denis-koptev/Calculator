        android:layout_toRightOf="@+id/button0"
        android:layout_toEndOf="@+id/button0"
        android:textColor="#faf7e3"
        android:textSize="20dp"
        android:layout_row="0"
        android:layout_column="19" />

    <Button
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:maxHeight="30dp"
        android:text="info"
        android:id="@+id/infobutton"
        android:onClick="binfoclick"
        android:background="#223337"
        android:textColor="#faf7e3"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_toLeftOf="@+id/eq_button"
        android:layout_toStartOf="@+id/eq_button"
